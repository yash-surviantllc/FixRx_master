# FixRx Backend Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fixrx_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fixrx_db
DB_USER=postgres
DB_PASSWORD=postgres

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_secret_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
PLATFORM_COMMISSION_PERCENT=10

# =============================================================================
# FRONTEND URLS
# =============================================================================
# Frontend application URLs for CORS and redirects
# FRONTEND_URL is used for magic link redirects (should be your web redirect endpoint)
# For mobile app development, use custom scheme: fixrx://
# For production, use HTTPS URL: https://fixrx.com
FRONTEND_URL=exp://192.168.1.5:8082/--/magic-link
APP_SCHEME=fixrx
API_BASE_URL=http://192.168.1.5:3000/api/v1
CORS_ORIGINS=http://192.168.1.5:3000,http://localhost:3000,http://localhost:3001,http://localhost:8080,http://localhost:19000

# =============================================================================
# EMAIL SERVICE (SENDGRID)
# =============================================================================
# Get your API key from: https://app.sendgrid.com/settings/api_keys
# Leave empty to disable email sending (development mode)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@fixrx.com
SENDGRID_FROM_NAME=FixRx
# Optional: SendGrid templates (leave empty to use default HTML)
SENDGRID_TEMPLATE_WELCOME=
SENDGRID_TEMPLATE_INVITATION=
SENDGRID_TEMPLATE_PASSWORD_RESET=
SENDGRID_TEMPLATE_MAGIC_LINK=

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
DEBUG=true
