# FixRx Backend Environment Configuration
# Copy this file to .env and update with your actual values
# ⚠️ NEVER commit .env file to git!

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/fixrx_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fixrx_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate secure secrets using: node generate-secrets.js
JWT_SECRET=generate_using_node_generate_secrets_js
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=generate_using_node_generate_secrets_js
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
PLATFORM_COMMISSION_PERCENT=10

# =============================================================================
# FRONTEND URLS
# =============================================================================
# Frontend application URLs for CORS and redirects
# Update with your actual IP address
FRONTEND_URL=exp://YOUR_IP_ADDRESS:8081/--/magic-link
APP_SCHEME=fixrx
API_BASE_URL=http://YOUR_IP_ADDRESS:3000/api/v1
CORS_ORIGINS=http://YOUR_IP_ADDRESS:3000,http://10.0.2.2:3000,http://localhost:3000,http://localhost:3001,http://localhost:8080,http://localhost:8081,http://localhost:19000

# =============================================================================
# EMAIL SERVICE (SENDGRID)
# =============================================================================
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=your_email@domain.com
SENDGRID_FROM_NAME=FixRx

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
DEBUG=true

# =============================================================================
# TWILIO CONFIGURATION
# =============================================================================
TWILIO_CLIENT_ID=your_twilio_client_id
TWILIO_CLIENT_SECRET=your_twilio_client_secret
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# OTP Configuration
OTP_DEV_MODE=true
OTP_DEV_CODE=123456
OTP_RESEND_COOLDOWN_SECONDS=5
OTP_MAX_PER_HOUR=100
OTP_MAX_ATTEMPTS=20
OTP_BLOCK_DURATION_MINUTES=1
OTP_EXPIRY_MINUTES=30
TWILIO_RATE_LIMIT_MPS=1
TWILIO_COST_PER_SEGMENT=0.0075
